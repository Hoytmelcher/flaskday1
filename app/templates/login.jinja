{% extends "base.jinja" %}

{% block content %}
    <h2>Login</h2>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{ form.email.label }}<br>
            {{ form.email(size=32) }}
            {% for error in form.email.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=32) }}
            {% for error in form.password.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.submit(class='btn btn-primary') }}
        </p>
{% endblock %}