{% extends "base.jinja" %}

{% block content %}
    <h2>Cars</h2>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{ form.make.label }}<br>
            {{ form.make(size=32) }}
            {% for error in form.make.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.model.label }}<br>
            {{ form.model(size=32) }}
            {% for error in form.model.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.year.label }}<br>
            {{ form.year(size=32) }}
            {% for error in form.year.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.color.label }}<br>
            {{ form.color(size=32) }}
            {% for error in form.color.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
        <p>
            {{ form.price.label }}<br>
            {{ form.price(size=32) }}
            {% for error in form.price.errors %}
            <span> {{ error }} </span>
            {% endfor %}
        </p>
         <p>
            {{ form.submit(class='btn btn-primary') }}
        </p>
{% endblock %}